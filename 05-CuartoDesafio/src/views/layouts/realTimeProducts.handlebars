<div>
    <h1> Lista de Productos en Stock</h1>
    <ul id="pList">
        {{#each food}}
        <li id="{{this.code}}"> {{this.code}} {{this.title}} {{this.description}} {{this.price}} {{this.stock}} {{this.category}}
        </li>
        {{/each}}
    </ul>
</div>
<div>
    <h2> Agregar nuevo Producto</h2>

    <form id="formProduct">

        <label for="title">title:</label>
        <input type="text" id="title" name="title" required><br>

        <label for="description">description:</label>
        <input type="text" id="description" name="description" required><br>

        <label for="code">code:</label>
        <input type="number" id="code" name="code" required><br>

        <label for="price">price:</label>
        <input type="number" id="price" name="price" required><br>

        <label for="stock">stock:</label>
        <input type="number" id="stock" name="stock" required><br>

        <label for="thumbnail1">thumbnail 1:</label>
        <input type="text" id="thumbnail1" name="thumbnail1" required><br>

        <label for="thumbnail2">thumbnail 2:</label>
        <input type="text" id="thumbnail2" name="thumbnail2" required><br>

        <label for="estado">estado:</label>
        <input type="text" id="estado" name="estado" required><br>

        <label for="category">category:</label>
        <input type="text" id="category" name="category" required><br>

        <button type="submit" id="btn_registrar">Registrar</button>

    </form>
</div>

<div>
    <h2> Eliminar Producto</h2>

    <form id="deleteProduct">

        <label for="pEliminar">Producto a Eliminar:</label>
        <input type="number" id="pEliminar" name="pEliminar" required><br>
        <button type="submit" id="btn_eliminar">Eliminar</button>

    </form>
</div>


<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/index.js"></script>